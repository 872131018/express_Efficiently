doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/style.css')
    body
        div(id='header')
        h1.
            #{title}
        h3
            a(href='/fills/new') Add Fillup
        ul
            - each fill, i in fills
                li
                    = fill_date
                    = fill.station
                    = fill.address
                    form(action='/fills/#{fill._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                        input(type='hidden',value='DELETE',name='_method')
                        button(type='submit') Delete
                p
                    a(href='/fills/#{fill._id}/edit') Edit
                p
                    a(href='/fills/#{fill._id}') Show

    script(type='text/javascript', src='https://unpkg.com/react@15.3.0/dist/react.js')
    script(type='text/javascript', src='https://unpkg.com/react-dom@15.3.0/dist/react-dom.js')
    script(type='text/javascript', src='https://unpkg.com/babel-standalone@6.15.0/babel.min.js')
    script(type='text/javascript', src='https://unpkg.com/jquery@3.1.0/dist/jquery.min.js')
    script(type='text/babel' src='/javascripts/react.js')
